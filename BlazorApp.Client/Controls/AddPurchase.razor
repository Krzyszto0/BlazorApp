<LogIn Login="false"></LogIn>

@if (display && Login)
{
    <div class="modal is-active">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Dodaj Wpis</p>
                <button class="delete" aria-label="close" @onclick="close"></button>
            </header>
            <section class="modal-card-body">
                <div class="box">
                    <p class="is-info">Konto</p>
                    <input class="input is-medium is-primary" type="text" placeholder="Wprowadź Konto">
                    <p class="is-info">Wartość</p>
                    <input class="input is-medium is-primary" type="text" placeholder="Wprowadź Wartość">
                </div>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-success">Przychód</button>
                <button class="button is-success">Wydatek</button>
                <button class="button">Cancel</button>
            </footer>
        </div>
    </div>
}
else
{
    <LogIn></LogIn>    
}


@code {
    private bool display;
    private bool Login;

    public void show()
    {
        this.display = true;
        StateHasChanged();
    }

    public void close()
    {
        this.display = false;
        StateHasChanged();
    }
}