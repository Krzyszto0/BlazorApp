@page "/"

<PageTitle>Home</PageTitle>
<section class="hero is-success is-fullheight">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
        <header class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a class="navbar-item" href="">
                        <span class="title">WebWallet</span>
                    </a>
                </div>
                <div id="navbarMenuHeroC" class="navbar-menu">
                    <div class="navbar-end">
                        <a class="navbar-item" href="CashFlow">
                            Przepływ pieniędzy
                        </a>
                        <span class="navbar-item">
                            <button class="button is-success is-inverted" @onclick="(()=> {Purchase.show();})">
                                <span class="icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path fill="#24d160" d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z" /></svg>
                                </span>
                                <span>Dodaj wpis</span>
                            </button>
                            <AddPurchase @ref="Purchase"></AddPurchase>
                        </span>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <!-- Hero content: will be in the middle -->
    <div class="hero-body tile is-ancestor">
        <div class="tile is-3 is-vertical is-parent">
            <button class="button is-primary is-inverted is-static is-rounded"> KONTO   $$</button>
            <button class="button is-primary is-inverted is-static is-rounded"> KONTO   $$</button>
            <button class="button is-primary is-inverted is-static is-rounded"> KONTO   $$</button>
            <button class="button is-primary is-inverted is-static is-rounded"> KONTO   $$</button>
        </div>

        <div class="tile is-4 is-vertical is-parent">
            <div class="tile is-child box">
                <h1 class="Title">Przepływ pieniędzy $$$,$$</h1>
                <!-- Tu będzie wykres -->
                <canvas id="Cashflow" style="width: 100%"></canvas>
                <script>
                    var xValues = [1, 2, 3, 4, 5, 6];
                    var yValues = [800, 900, 500, 220, 1200, 530];

                    new Chart("Cashflow", {
                        type: "line",
                        data: {
                            labels: xValues,
                            datasets: [
                                {
                                    data: yValues,
                                    borderColor: "blue"
                                }, 
                            ]
                        },
                            options: {
                                legend: { display: false }
                            }
                    });
                    </script>
            </div>
            <div class="tile is-child box">
                <h1 class="Title">Przychód $$$,$$</h1>
                <progress class="progress is-primary" value="100" max="100">15%</progress>
                <h1 class="Title">Wydatki $$$,$$</h1>
                <progress class="progress is-danger" value="20" max="100">15%</progress>
            </div>
        </div>

        <div class="tile is-parent">
            <div class="tile is-child box">
                <h1 class="Title has-text-centered">Wpisy</h1>
                <table class="table is-fullwidth">
                    <tbody class="is-primary">
                        <tr>
                            <th><i class="fas fa-user"></i></th>
                            <td>Nazwa Konta</td>
                            <td>Kwota</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@code {
    private AddPurchase Purchase;

}